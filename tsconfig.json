{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "lib": [
      "es2015",
      "esnext",
      "dom"
    ],
    "outDir": "dist",
    "experimentalDecorators": true,
    "target": "es5",
    "allowJs": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "js/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
